@{
    var title = ViewData["Title"] as string ?? "PubsData";
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title - PubsData</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header> <partial name="_Nav" /> </header>
    <main class="container py-4"> @RenderBody() </main>
    <footer class="border-top text-center py-3 small text-muted"> PubsData &copy; @DateTime.Now.Year </footer>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script> @await RenderSectionAsync("Scripts", required: false)
</body>
</html>