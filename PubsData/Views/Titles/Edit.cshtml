@model PubsData.Domain.Entities.Title
@{
    ViewData["Title"] = "Edit Title";
}

<h2>Edit Title</h2>
<form asp-action="Edit" method="post" class="mt-3">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="TitleId" />
    <partial name="_Form" model="Model" />
    <div class="mt-3">
        <button class="btn btn-primary" type="submit">Save</button>
        <a class="btn btn-secondary" href="@Url.Action("Index")">Cancel</a>
    </div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
</form>