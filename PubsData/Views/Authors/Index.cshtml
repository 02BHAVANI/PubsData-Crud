@model IEnumerable<PubsData.Domain.Entities.Author>
@{
    ViewData["Title"] = "Authors";
    var q = ViewBag.Query as string;
}

<h2 class="mb-3">Authors</h2>
<form method="get" class="row g-2 mb-3"> 
    <div class="col-auto"> 
        <input type="text" name="q" value="@q" class="form-control" placeholder="Search by id" /> 
        
    </div> 
        <div class="col-auto"> 
            <button class="btn btn-primary" type="submit">Search</button> 
            <a class="btn btn-success ms-2" href="@Url.Action("Create")">Add Author</a> 
        </div> 
        
</form>
<table class="table table-striped table-hover" data-filter="#clientFilterAuthors"> 
    <thead class="table-light"> 
        <tr> 
            <th>Id</th>
            <th>Last</th>
            <th>First</th>
            <th>Phone</th>
            <th>City</th>
            <th>State</th>
            <th>Contract</th>
            <th class="text-end">Actions</th>
        </tr> 
        
    </thead> 
    
<tbody> 

@if (Model != null)
{
    foreach (var a in Model)
    {
        <tr> 
            <td>@a.AuId</td> 
            <td>@a.AuLName</td> 
            <td>@a.AuFName</td> 
            <td>@a.Phone</td> 
            <td>@a.City</td> 
            <td>@a.State</td> 
            <td>@(a.Contract ? "Yes" : "No")</td> 
            <td class="text-end"> 
                <a class="btn btn-sm btn-secondary" href="@Url.Action("Edit", new { id = a.AuId })">Edit</a> 
                <a class="btn btn-sm btn-info text-white" href="@Url.Action("Details", new { id = a.AuId })">Details</a> 
                <a class="btn btn-sm btn-danger" data-confirm="Delete this author?" href="@Url.Action("Delete", new { id = a.AuId })">Delete</a> 
            </td> 
            
        </tr>
    }
}
else
{
    <tr>
        <td colspan="8">No data available</td>
    </tr>
}
 </tbody> </table>