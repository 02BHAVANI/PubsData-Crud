@model IEnumerable<PubsData.Domain.Entities.Title>
@{
    ViewData["Title"] = "Titles";
    var q = ViewBag.Query as string;
}

<h2 class="mb-3">Titles</h2>
<form method="get" class="row g-2 mb-3"> <div class="col-auto"><input type="text" name="q" value="@q" class="form-control" placeholder="Search by id, name, type, publisher id" /></div> <div class="col-auto"> <button class="btn btn-primary" type="submit">Search</button> <a class="btn btn-success ms-2" href="@Url.Action("Create")">Add Title</a> </div> </form>
<table class="table table-striped table-hover"> <thead class="table-light"> <tr><th>Id</th><th>Title</th><th>Type</th><th>Publisher</th><th>Price</th><th>YTD Sales</th><th class="text-end">Actions</th></tr> </thead> <tbody> @foreach (var t in Model) {
<tr> <td>@t.TitleId</td> <td>@t.Name</td> <td>@t.Type</td> <td>@t.PubId</td> <td>@t.Price?.ToString("C")</td> <td>@t.YtdSales</td> <td class="text-end"> <a class="btn btn-sm btn-secondary" href="@Url.Action("Edit", new { id = t.TitleId })">Edit</a> <a class="btn btn-sm btn-info text-white" href="@Url.Action("Details", new { id = t.TitleId })">Details</a> <a class="btn btn-sm btn-danger" data-confirm="Delete this title?" href="@Url.Action("Delete", new { id = t.TitleId })">Delete</a> </td> </tr>
}
 </tbody> </table>