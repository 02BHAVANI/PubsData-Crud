@model PubsData.Domain.Entities.Sales
@{
    ViewData["Title"] = "Delete Sale";
}

<h2>Delete Sale</h2>
<div class="alert alert-warning">Are you sure you want to delete this sale?</div>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Store</dt>
            <dd class="col-sm-9">@Model.StorId</dd>

            <dt class="col-sm-3">Order #</dt>
            <dd class="col-sm-9">@Model.OrdNum</dd>

            <dt class="col-sm-3">Title Id</dt>
            <dd class="col-sm-9">@Model.TitleId</dd>

            <dt class="col-sm-3">Title</dt>
            <dd class="col-sm-9">@Model.TitleName</dd>

            <dt class="col-sm-3">Date</dt>
            <dd class="col-sm-9">@Model.OrdDate.ToString("yyyy-MM-dd")</dd>

            <dt class="col-sm-3">Qty</dt>
            <dd class="col-sm-9">@Model.Qty</dd>

            <dt class="col-sm-3">Payterms</dt>
            <dd class="col-sm-9">@Model.Payterms</dd>
        </dl>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="StorId" />
            <input type="hidden" asp-for="OrdNum" />
            <input type="hidden" asp-for="TitleId" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a class="btn btn-secondary" href="@Url.Action("Index")">Cancel</a>
        </form>
    </div>
</div>
