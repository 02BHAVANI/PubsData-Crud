@model IEnumerable<PubsData.Domain.Entities.Publisher>
@{
    ViewData["Title"] = "Publishers";
    var q = ViewBag.Query as string;
}

<h2 class="mb-3">Publishers</h2>
<form method="get" class="row g-2 mb-3"> 
    <div class="col-auto"><input type="text" name="q" value="@q" class="form-control" placeholder="Search by id, name, city, state, country" /></div> 
        <div class="col-auto"> 
            <button class="btn btn-primary" type="submit">Search</button> 
            <a class="btn btn-success ms-2" href="@Url.Action("Create")">Add Publisher</a>
        </div> 
</form>

<table class="table table-striped table-hover"> 
    <thead class="table-light"> 
        <tr><th>Id</th>
            <th>Name</th>
            <th>City</th>
            <th>State</th>
            <th>Country</th>
            <th class="text-end">Actions</th>
        </tr> </thead> <tbody> @foreach (var p in Model) {
<tr> <td>@p.PubId</td> 
    <td>@p.PubName</td> 
    <td>@p.City</td> 
    <td>@p.State</td> 
    <td>@p.Country</td> 
    <td class="text-end">
        <a class="btn btn-sm btn-secondary" href="@Url.Action("Edit", new { id = p.PubId.Trim() })">Edit</a>
        <a class="btn btn-sm btn-info text-white" href="@Url.Action("Details", new { id = p.PubId.Trim() })">Details</a>
        <a class="btn btn-sm btn-danger" data-confirm="Delete this publisher?" href="@Url.Action("Delete", new { id = p.PubId.Trim() })">Delete</a>
    </td> 
    </tr>
}
 </tbody> </table>