@model PubsData.Domain.Entities.Author
@{
    ViewData["Title"] = "Author Details";
}

<h2>Author Details</h2>

<div class="card"> 
    <div class="card-body"> 
        <dl class="row"> 
            <dt class="col-sm-2">Id</dt>
            <dd class="col-sm-10">@Model.AuId</dd> 
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@Model.AuFName @Model.AuLName</dd> 
            <dt class="col-sm-2">Phone</dt>
            <dd class="col-sm-10">@Model.Phone</dd> 
            <dt class="col-sm-2">City</dt>
            <dd class="col-sm-10">@Model.City</dd> 
            <dt class="col-sm-2">State</dt>
            <dd class="col-sm-10">@Model.State</dd> 
            <dt class="col-sm-2">Contract</dt>
            <dd class="col-sm-10">@(Model.Contract ? "Yes" : "No")</dd> 
        </dl> <a class="btn btn-secondary" href="@Url.Action("Index")">Back</a> 
        <a class="btn btn-primary" href="@Url.Action("Edit", new { id = Model.AuId })">Edit</a> 
    
    </div> 
    
</div>